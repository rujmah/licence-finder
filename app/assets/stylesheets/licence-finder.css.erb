}*/

.meta-data {
  background: #fff;
  float: none;
  font-size: 1em;
  margin-right: 15em;
  padding: 0 5em 0 0;
  width: auto;
}

.meta-data .modified-date {
  font-size: 0.85em;
}

/*
  errors messages
*/

.error {
  border:1px solid #B01117;
  background-color:#FFF3CF;
  color:#B01117;
  margin: 0 0 -0.5em -0.5em;
  padding: 0.5em;
}
.error ul {
  margin-bottom: 0;
}
.error-message {
  margin-top: 0;
  color:#B01117;
}

/*
  calculators
*/

.calculator article {
  min-height: 0;
}

@media only screen and (max-width:670px) {
  .step.current,
  .meta-data{
    margin:0;
  }
}

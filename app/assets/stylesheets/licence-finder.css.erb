/*
	landing page
*/

.start {
	display: inline-block;
}

.start a {
	font-size: 1.5em;
	margin: 0.5em 0 0 0;
}

.get-started {
/*  margin-top: 1.5em;*/
}

/*
  questions
*/

.hint {
  color: #666;
  display: block;
}

.done-questions {
  position: relative;
}

.start-again {
  background: #fff;
  position: absolute;
  right: 0;
  top: -2.5em;
  height: 2.5em;
  width: 11em;
}

.start-again a {
  display: block;
  line-height: 2.5em;
  text-align: center;
	text-decoration: none;
}

.start-again a:hover {
	text-decoration: underline;
}

.done-questions ol {
  margin: 0;
  padding: 0;
  position: relative;
  z-index: 1;
}

.done-questions ol > li {
  list-style: none;
  position: relative;
  padding: 0.5em 1.5em 0.5em 5em;
}

.done-questions ol > li.done {
  background: #CCE0D5;
  border-bottom: solid 1px #A1D1AE;
  overflow: hidden;
}

.done-questions ol > li.done:last-child {
  border-bottom: none;
}

.done-questions .question-number {
  font-weight: normal;
}

li.done h3 {
  display: inline;
  font-size: 1em;
  margin: 0.5em 0.5em 0 0;
}
.lte-ie8 li.done h3 {
  line-height: 1.5em;
  position: relative;
}

li.done .answer {
  background-color: #4f6f5e;
  color: #fff;
  display: inline;
  padding: 0.1em 0.3em;
  margin-right: 0.5em;
}

li.done .undo {
  display: inline;
  float: right;
  font-size: 0.85em;
  margin: -2em 0 0 0.5em;
}
.lte-ie8 li.done .undo {
  margin: 0;
  *position: absolute;
  *bottom: 0.75em;
  *right: 1em;
}

li.done .undo a {
  color: #333;
  display: block;
  text-decoration: none;
}
.lte-ie8 li.done .undo a {
  *color: #333;
}

li.done:hover .undo a {
  color: inherit;
  text-decoration: underline;
}

.step.current {
	background-color: #fff;
	margin-right: 15em;
	padding: 0 2em 1em 5em;
	position: relative;
}

.current-question {
  border-top: solid 1px #C9D0D0;
	margin-top: -1px;
	padding: 1.5em 0 1.25em 0;
}

.current-question h2 {
  border: none;
  margin-bottom: 0.5em;
  margin-left:-0.4em;
  position: relative;
}
.lte-ie8 .current-question h2 {
  line-height: 1.2em;
}

.question-number {
  display: inline-block;
  margin-left: -1.5em;
  width: 1.5em;
}
.lte-ie8 .question-number {
  display: block;
  position: absolute;
}

.done .question-number {
  margin-left: -1.7em;
}

.current-question ul {
  list-style: none;
  padding: 0;
}

.current-question ul li {
  line-height: 1.5em;
  margin: 0.5em 0;
}

.question-body + p input.button {
  margin-top: 0.5em;
}


.current-question label {
  margin-left: 0.25em;
}

.current-question select {
  margin-right: 0.25em;
}

.next-question {
  margin: 1.5em 0 0.5em 0;
}

/*
	results
*/

.results .inner {
  padding-top: 2em;
}

.results {
	background-color: #fff;
  float: none;
	margin-right: 0;
